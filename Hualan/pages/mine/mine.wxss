page{background:#eee}
.header{height:50px;padding:10px;display:flex;background:#fff;border-bottom:1px solid #ddd}
.headerimg{width:30%;text-align:right;line-height:50px}
.headerimg image{display:inline-block;width:45px;height:45px;box-shadow:5px 5px 3px 0px #46c01b;border-right:2px solid #fff;border-bottom:2px solid #fff;margin-right:15px}
.rightarea{width:70%;height:50px;}
.nickname{font-size:14px;height:24px;line-height:24px}
.desc{font-size:12px;line-height:26px;height:26px}
.list{margin-top:10px;border-top:1px solid #ddd;border-bottom:1px solid #ddd;background:#fff}

.item{display:flex;font-size:12px;line-height:35px}
.itemleft{height:35px;width:90%}
.itemright{height:35px;width:10%;background:url('data:image/png;base64,') no-repeat;background-size:6px 12px;background-position:center}
.borbm{border-bottom:1px solid #ddd;}