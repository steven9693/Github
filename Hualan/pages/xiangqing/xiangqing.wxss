/* pages/xiangqing/xiangqing.wxss */
page{background:#ddd}
.header{padding:10px 0;display:flex;height:50px;background:#ffffff}
.head{width:30%;text-align:right}
.head image{width:50px;height:50px;box-shadow:5px 5px 3px 0px #46c01b;margin-right:20px}
.headright{width:70%}
.nickname{font-size:14px;height:26px;line-height:26px}
.info{font-size:12px;height:24px;line-height:24px;}
.imagearea{margin-top:15px;padding:10px 0;margin:10px 0 0 0;background:#ffffff}
.imagearea image{display:block;width:100%;height:320px}

.tool{height:35px;position:fixed;left:0;right:0;bottom:0;background:#eee;padding:5px 0;
display:flex;}
.toolleft{width:70%;height:35px;box-sizing:border-box;padding:0 0 0 10px;font-size:14px;line-height:35px}
.toolleft input{display:block;width:100%;line-height:35px;height:35px;background:#fff;border-radius:5px}
.toolright{box-sizing:border-box;padding:0 10px;width:30%;}
.huida{height:35px;line-height:35px;text-align:center;font-size:14px;background:#46c01b;color:#fff;border-radius:5px}

.list{padding-bottom:50px}
.item{display:flex;height:40px;border-bottom:1px solid #ddd;background:#fff;padding:5px 0em}
.itemleft{width:40px;height:40px;margin-left:10px}
.itemleft image{width:40px;height:40px}
.itemright{font-size:12px;margin:0 10px;width:100%}
.titlebar{height:22px;line-height:22px;color:#666;display:flex}
.descbar{color:#999;height:18px;line-height:18px}
.list-nickname{width:70%;height:22px;line-height:22px}
.ctime{width:30%;height:22px;line-height:22px;color:#999}



