.alertmain{
  width:270px;
  height:320px;
  position:fixed;
  top:50%;
  left:50%;
  margin:-160px 0 0 -135px;
  z-index:2;
}
.alertmain image{
  width:270px;
  height:320px;
}

.maskbg{
  background:rgba(0,0,0,0.4);
}

.gongxi{
  font-size:36px;
  font-weight:bold;
  text-align:center;
  height:40px;
  line-height:40px;
  width:270px;
  padding:46px 0 0 0;
  /* color:#fa1a4e; */
  background: linear-gradient(to top, #df0c33, #ee7651);
  -webkit-background-clip: text;
  color: transparent;
}

.gongxitip{
  font-size:15px;
  margin-top:10px;
  color:#fa1a4e;
  width:270px;
  height:20px;
  line-height:20px;
  font-weight:bold;
  text-align:center;
}

.gongxibg{
  position:absolute;
  z-index:-1
}

.mainnote{
  font-size:12px;
  color:#fff;
  margin-top:80px;
  text-align: center;
}

.openbtn{
  width:200px;
  height:45px;
  font-size:15px;
  color:#eb003d;
  line-height: 45px;
  text-align: center;
    background-image: -webkit-linear-gradient(top, #fce128,#dcb928);
  border-radius:4px;
  margin:30px auto 0
}



.sharesuccess{
  width:270px;
  height:215px;
  margin:-107px 0 0 -135px;
  position:fixed;
  left:50%;
  top:50%;
  background:#fff;
  z-index:2;
  border-radius:10px;
}

.sharetitle{
  font-size:24px;
  height:28px;
  line-height: 28px;
  font-weight: bold;
  text-align: center;
  padding:39px 0 25px 0px;
}
.sharenote{
  height:16px;
  font-size:15px;
  line-height: 16px;
  color:#999;
  text-align: center
}

.answererror .distcircle{display:none}
.answererror .errortip{
  height:18px;
  width:18px;
  border-radius:9px;
  background:#fff url('data:image/png;base64,');
  background-size:18px 18px;
}


.overbox{
  width:270px;
  height:170px;
  position:fixed;
  background:#fff;
  border-radius:10px;
  left:50%;
  top:50%;
  z-index: 11;
  margin:-85px 0 0 -135px;
}

.overtitle{
  padding:39px 20px 25px;
  font-size:15px;
  color:#666;
  line-height:26px;
}

.overbar{
  height:45px;
  /*border-top:1px solid #f1f1f1*/
}

.overbar .btn{
  width:50%;
  display:inline-block;
  height:45px;
  line-height:45px;
  text-align:center;
  color:#eb003d;
  vertical-align:middle;
}

.overbar .sharebutton{
  display:inline-block;
  width:50%;
  border:0px;
  background:#fff;
  vertical-align:middle;
  font-size:15px;
  color:#eb003d;
}



