/* pages/questions/questions.wxss */
@import '../../style/style.wxss';


button::after {
  border: 0;
} 


.row{
  position:relative;
  line-height:32px;
  margin-bottom:18px;
  border:1px solid #fff
}
.row .leftrow{
  width:30px;
  position:absolute;
}

.row .rightrow{
  margin-left:30px;
}

.submitbtn{
  margin:20px 30px 0 30px;
  text-align:center;
  height:49px;
  line-height:49px;
  background:#e61039;
  color:#fff;
  font-size:18px;
  border-radius:5px;
}

.userselect{
  background:#f7f7f7;
  border:1px solid #f1f1f1;
  color:#1683fd;
  border-radius:5px;
}

.right .opt{
  display:none;
}

.answererror .opt{
  display:none;
}


.right .righttip{
  height:18px;
  width:18px;
  border-radius:9px;
  background:#fff url('data:image/png;base64,');
  background-size:18px 18px;
}

.error{
  background:red
}

.noselect{
  width:120px;
  height:30px;
  line-height:30px;
  background:rgba(0,0,0,0.6);
  font-size:14px;
  text-align:center;
  position:fixed;
  left:50%;
  top:50%;
  margin:-15px 0 0 -60px;
  color:#fff;
  border-radius:3px;
  z-index:2;
}

.mask{
  position:absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background:rgba(0,0,0,0);
  z-index:1;
  display:block;
}

.timu{
  display:inline-block;
  height:16px;
  line-height:16px;
  padding-top:2px;
  width:38px;
  border:1px solid #15a3ff;
  color:#15a3ff;
  font-size:10px;
  text-align:center;
  vertical-align: middle;
  border-radius:4px;
  margin-right:5px;
  margin-top:-2px;
}

.mainquestions{
  font-size:16px;
  line-height:32px;
  color:#666
}

.answerblock{
  /*45*/
  margin-top:35px;
  color:#666;
}

.circle{
  height:18px;
  width:18px;
  line-height: 18px;
  border:1px solid #f1f1f1;
  margin:5px;
  font-size:14px;
  text-align:center;
  border-radius:10px;

}

.userselect .circle{
  border:1px solid #1683fd
}

.answererror .circle{
  border:1px solid #f1f1f1
}


.distcircle{
  width:12px;
  height:12px;
  margin:3px;
  background:#1683fd;
  border-radius:6px;
  display:none;
}


