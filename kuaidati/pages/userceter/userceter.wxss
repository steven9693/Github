/* pages/userceter/userceter.wxss */
@import '../../style/style.wxss';
.title{
  font-size:24px;
  color:#fafbff;
  padding:0 30px 10px 30px;
}


.heading{
  width:50px;
  height:50px;
  border-radius:25px;
  overflow:hidden;

}

.top{
  position:relative
}

.topm{
  position:absolute;
  margin-left:60px;
  top:0px;
}

.topr{
  width:60px;
  position:absolute;
  top:0px;
  right:0;
}

.toprow{
  height:30px;
  font-size:18px;
  line-height:30px;

}

.bottomrow{
  height:20px;
  font-size:10px;
  line-height:20px;
  color:#999;
}

.wrap{
  height:78px;
  border-top:1px solid #f1f1f1;
  margin-top:20px;
}

.block{
  width:33.33%;
  height:78px;
  display:inline-block;
  text-align:center;
  vertical-align:middle;
}

.blocktop{
  height:30px;
  line-height:30px;
  padding-top:18px;
  color:#333;
  font-size:18px;
}

.blockbottom{
  height:30px;
  line-height:30px;
  font-size:10px;
  color:#999;
}

.startbtn{
  margin:38px 20px 0;
  height:49px;
  background:#e92b3b;
  border-radius:5px;
  line-height:49px;
  text-align:center;
  color:#fff;
  font-size:20px;
}